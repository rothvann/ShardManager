filegroup(
  name = 'protobuf-files',
  srcs = glob(['protobuf/**/*.*'])
)

genrule(
  name = 'build-protobuf',
  srcs = ['//external_deps:protobuf-files'],
  cmd = '(cd $SRCS/protobuf && cmake . -Dprotobuf_ABSL_PROVIDER=package -DCMAKE_PREFIX_PATH=../../$(location //external_deps/abseil-cpp:build-abseil)/lib/cmake/ -Dprotobuf_BUILD_TESTS=OFF -DCMAKE_CXX_STANDARD=17 -DCMAKE_INSTALL_PREFIX=./out -DCMAKE_CXX_FLAGS="-O2 -march=native" && make && make install) && cp -r $SRCS/protobuf/out/. $OUT',
  out = '.',
)

genrule(
  name = 'protoc',
  srcs = ['//external_deps:build-protobuf'],
  cmd = 'cp $SRCS/bin/protoc $OUT',
  executable = True,
  out = 'protoc',
  visibility = [
    'PUBLIC',
  ],
)

genrule(
  name = 'headers-protobuf-google',
  srcs = ['//external_deps:build-protobuf'],
  cmd = 'cp -r $SRCS/include/google $OUT',
  out = 'google',
)

