  srcs = ['//external_deps:build-protobuf'],
  cmd = 'cp -r $SRCS/include/utf8_validity.h $OUT',
  out = 'utf8_validity.h',
)

genrule(
  name = 'lib-protobuf',
  srcs = ['//external_deps:build-protobuf'],
